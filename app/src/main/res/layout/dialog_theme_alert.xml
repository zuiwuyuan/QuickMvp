<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dp_16"
    android:background="@drawable/theme_dialog_radius_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitleInMyAlert"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_12"
        android:text="温馨提示"
        android:textColor="#333333"
        android:textSize="@dimen/sp_17"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvMessageInMyAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_4"
        android:gravity="center"
        android:maxLines="20"
        android:minHeight="@dimen/dp_64"
        android:scrollbars="vertical"
        android:textColor="#666666"
        android:textSize="@dimen/sp_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#F2F5FA" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnLeftInMyAlert"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/theme_dialog_btn_left_bg"
            android:text="取消"
            android:textColor="#0CC0F6"
            android:textSize="@dimen/sp_16" />

        <View
            android:id="@+id/verticalDividerInBtns"
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_4"
            android:background="#F2F5FA" />

        <Button
            android:id="@+id/btnRightInMyAlert"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/theme_dialog_btn_right_bg"
            android:text="确定"
            android:textColor="#0CC0F6"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

</LinearLayout>